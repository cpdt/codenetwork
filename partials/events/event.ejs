<% if (event.isBig) { %>
<div class="event big-event">
    <div class="left event-image" style="background-image:url(/upload/<%= event.smallImagePath %>)"></div>
    <div class="right content">
        <div class="header">
            <h3><a href="/event/<%= event.slug %>"><%= event.name %></a></h3>
            <p><%= event.whenWhere %></p>
        </div>
        <%- event.renderedShortDescription %>
        <p><a href="/event/<%= event.slug %>" title="<%= event.name%>">More info...</a></p>
    </div>
</div>
<% } else { %>
<div class="event">
    <div class="event-image" style="background-image:url(/upload/<%= event.smallImagePath %>)">
        <h3><a href="/event/<%= event.slug %>"><%= event.name %></a></h3>
    </div>
    <div class="content">
        <div class="header">
            <p><%= event.whenWhere %></p>
        </div>
        <%- event.renderedShortDescription %>
        <p><a href="/event/<%= event.slug %>" title="<%= event.name %>">More info...</a></p>
    </div>
</div>
<% } %>