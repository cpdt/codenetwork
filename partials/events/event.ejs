<% if (event.isBig) { %>
<div class="event big-event">
    <div class="left event-image" style="background-image:url(<%= event.imagePath %>)"></div>
    <div class="right content">
        <div class="header">
            <h3><a href="events/<%= event.slug %>"><%= event.name %></a></h3>
            <p><%= event.whenWhere %></p>
        </div>
        <%- event.renderedShortDescription %>
    </div>
</div>
<% } else { %>
<div class="event">
    <div class="event-image" style="background-image:url(<%= event.imagePath %>)">
        <h3><a href="events/<%= event.slug %>"><%= event.name %></a></h3>
    </div>
    <div class="content">
        <div class="header">
            <p><%= event.whenWhere %></p>
        </div>
        <%- event.renderedShortDescription %>
    </div>
</div>
<% } %>